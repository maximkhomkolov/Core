public class Task2 {
    public static void main(String[] args) {
        int[] arr = {3, 4, 2, 7};
        int sum = 10;
        for (int i = 0; i < arr.length; i++) {
            for (int j = i + 1; j < arr.length; j++) {
                if (arr[i] + arr[j] == sum) {
                    System.out.println(arr[i] + " + " + arr[j] + " =  " + sum);
                }
            }
        }
    }
}
