public class Task2 {
    public static void main(String[] args) {
        int[] input = {3, 4, 2, 7};
        int number = 10;
        for (int i = 0; i < input.length; i++) {
            for (int j = i + 1; j < input.length; j++) {
                if (input[i] + input[j] == number) {
                    System.out.println(input[i] + " + " + input[j] + " =  " + number);
                }
            }
        }
    }
}
